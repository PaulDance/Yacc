{% extends 'baselayout/no-page-header.html.twig' %}

{% block title %}Room{% endblock title %}

{% block main %}
	<h1>Room</h1>
	
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ room.id }}</td>
			</tr>
			<tr>
				<th>Summary</th>
				<td>{{ room.summary }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ room.description }}</td>
			</tr>
			<tr>
				<th>Capacity</th>
				<td>{{ room.capacity }}</td>
			</tr>
			<tr>
				<th>Area</th>
				<td>{{ room.area }}</td>
			</tr>
			<tr>
				<th>Price</th>
				<td>{{ room.price }}</td>
			</tr>
			<tr>
				<th>Address</th>
				<td>{{ room.address }}</td>
			</tr>
			<tr>
				<th>Comments</th>
				<td>
					<ul>
				        {% for comment in room.getComments() %}
					        <li>
					        	{{ comment.client.getFirstName() }}
					        	{{ comment.client.getLastName() }}:
					        	{{ comment.getText() }}
					        </li>
						{% endfor %}
					</ul>
				</td>
			</tr>
		</tbody>
	</table>
	
	<br/>
	<a href="{{ path('room_index') }}">back to list</a>
	
	<a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>
	
	{{ include('room/_delete_form.html.twig') }}
{% endblock main %}
