{% extends 'baselayout/no-page-header.html.twig' %}

{% block title %}Room{% endblock title %}

{% block main %}
	<div class="section text-left">
		<h2 class="title"><center>{{ room.summary }}</center></h2>
	</div>
	<div class="row">
	<div class="col">
		<div id="carouselExampleControls" class="carousel slide w-70" data-ride="carousel">
		<div class="carousel-inner">
					<div class="carousel-item active">
				<img src="{{ asset((room.getImageAssets()|first).getAssetPath()) }}" class="card-img-top" alt="Room class="d-block w-100" alt="TE.">
			</div>
				{% for image in room.getImageAssets() %}
				{% if image != (room.getImageAssets()|first) %}
				<div class="carousel-item">
					<img src="{{ asset(image.getAssetPath()) }}" class="d-block w-100" alt=".EED..">
					</div>
				{% endif %}
				{% endfor %}
		</div>
	<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>
</div>
 
<div class="card border-primary mb-3" style="max-width: 18rem;">
  <div class="card-header">
  <p class="text-left" style="white-space: nowrap;"><span>Capacité: </span>
<span>{{ room.getCapacity() }}</span>
<i class="fa fa-users"></i> &nbsp;&nbsp;&nbsp;
<span>Aire: </span>
<span>{{ room.getArea() }}</span>
<i class="fa fa-home"></i> &nbsp;&nbsp;&nbsp;
<span>Prix: </span>
<span>{{ room.getPrice() }}</span>
<i class="fa fa-eur"></i>
</p>
  </div>
  <div class="card-body text-primary">
    <h3 class="card-title">Description</h3>
    <p class="card-text">{{ room.getDescription() }}</p>
  </div>
</div>



	<table class="table">
		<tbody>
			<tr>
				<th>Adresse</th>
				<td>{{ room.getAddress() }}</td>
			</tr>
			<tr>
			<tr>
			<form>
				 <div class="form-group">
    <th>Votre commentaire</th>
    <td><input type="comment" class="form-control" id="Comment" aria-describedby="commentHelp"></td>
  </div>
  </form>
  		</tr>
				<th>Commentaires</th>
				<td>
					<ul>
				        {% for comment in room.getComments() %}
					        <li>
					        	{{ comment.getClient().getUserAccount().getFirstName() }}
					        	{{ comment.getClient().getUserAccount().getLastName() }}:
					        	{{ comment.getText() }}
					        </li>
						{% endfor %}
					</ul>
				</td>
			</tr>
						
 
		</tbody>
	</table>
	
	<br/>
	
	<button type="button" class="btn btn-primary btn-lg">Réserver</button>	
	{{ include('room/_delete_form.html.twig') }}
{% endblock main %}
