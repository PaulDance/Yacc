
<div class="card card-raised border-primary" style="max-width: {{ max_col_width }}rem;">
	<a href="{{ path('room_show', {'id': room.getId()}) }}">
		<div class="card-header card-header-info">
			Room {{ index }}
		</div>
		
		{% if room.getImageAssets()|length != 0 %}
			<img src="{{ asset((room.getImageAssets()|first).getAssetPath()) }}" class="card-img-top" alt="Room {{ index }}"/>
		{% else %}
			<div class="display-1">
				<i class="fa fa-image"></i>
			</div>
		{% endif %}
		
		<div class="card-body">
			<div class="row align-items-center">
				<div class="col-lg-8">
					<h5 class="card-title">
						{{ room.getSummary() }}
					</h5>
				</div>
				<div class="col">
					{{ room.getCapacity() }} <i class="fa fa-users"></i>
				</div>
			</div>
			<div class="row align-items-center">
				<div class="col-lg-8">
					<p class="card-text">
						{{ room.getDescription() }}
					</p>
				</div>
				<div class="col">
					{{ room.getPrice() }} <i class="fa fa-eur"></i>
				</div>
			</div>
		</div>
	</a>
</div>
