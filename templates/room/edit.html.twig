{% extends 'baselayout/no-page-header.html.twig' %}

{% block title %}{{ project_name }} - {{ room.getSummary() }} Room Edit{% endblock title %}

{% block main %}
	<h1>Edit Room</h1>
	
	{{ include('room/_form.html.twig', {'button_label': 'Update'}) }}
	
	<br/>
	{% if app.user and (is_granted('ROLE_ADMIN')
					or is_granted('ROLE_OWNER') 
						and room.getOwner() is same as(app.user.getPossibleOwner())) %}
		{{ include('room/_delete_form.html.twig') }}
	{% endif %}
{% endblock main %}
