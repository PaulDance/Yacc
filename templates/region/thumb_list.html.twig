
{% set regions_len = regions|length %}

{% if regions_len == 0 %}
	<p class="h4 text-center pb-4">
		{{ nothing_found_message }}
	</p>
{% else %}
	{% for i in 0..(regions_len - 1) %}
		{% if (i % row_length) == 0 %}
			<div class="row pb-4">
				<div class="card-deck">
					{% for region in regions|slice(i, i + row_length - 1) %}
						{{ include('region/thumb_show.html.twig',
									{region: region,
										index: loop.index,
										max_col_width: max_col_width},
									with_context = false) }}
					{% endfor %}
				</div>
			</div>
		{% endif %}
	{% endfor %}
{% endif %}
