{% extends 'baselayout/no-page-header.html.twig' %}

{% block title %}Region{% endblock title %}

{% block main %}
	<h1>Region</h1>
	
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ region.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ region.name }}</td>
			</tr>
			<tr>
				<th>Presentation</th>
				<td>{{ region.presentation }}</td>
			</tr>
			<tr>
				<th>Country</th>
				<td>{{ region.country }}</td>
			</tr>
			<tr>
				<th>Rooms</th>
				<td>
					<ul>
						{% for room in region.getRooms() %}
							<li>
								<b>{{ room.summary }}</b>: {{ room.capacity }}
									people for {{ room.price }}â‚¬ a night.
								<a href="{{ path('room_show', {'id': room.id}) }}">Details</a>
							</li>
						{% endfor %}
					</ul>
				</td>
			</tr>
		</tbody>
	</table>
	
	<br/>
	<a href="{{ path('region_index') }}">back to list</a>
	
	<a href="{{ path('region_edit', {'id': region.id}) }}">edit</a>
	
	{{ include('region/_delete_form.html.twig') }}
{% endblock main %}
